DATABRICKS_HOST=https://<workspace-url>  # keep https:// and omit /o=
ZEROBUS_SERVER_ENDPOINT=<workspace-id>.zerobus.<region>.cloud.databricks.com
ZEROBUS_CLIENT_ID=<service-principal-app-id>  # from Settings → Identity & access → Service principals
ZEROBUS_CLIENT_SECRET=<service-principal-secret>
ZEROBUS_PROTO_MODULE=record_pb2
ZEROBUS_PROTO_MESSAGE=ZerobusDemo
ZEROBUS_TARGET_TABLE=main.default.zerobus_demo

# Optional toggles / fallbacks
#ZEROBUS_TOPIC=optus_zerobus_demo
#ZEROBUS_DRY_RUN=true
#ZEROBUS_USE_INGEST_SDK=true
#ZEROBUS_ALLOW_HTTP_FALLBACK=false
#DATABRICKS_PAT=<personal-access-token>  # only needed when HTTP fallback is enabled
#ZEROBUS_DESTINATION_ID=<lakeflow-connect-destination-id>
#ZEROBUS_ENDPOINT_PATH=/api/2.0/lakeflow/connect/destinations/<id>/events:ingest
